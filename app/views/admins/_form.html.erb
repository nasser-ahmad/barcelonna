<%= render 'shared/errors' , obj: @admin %>


<div class="row ">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for @admin do |f| %>
			<%=f.label :username %>
			<%=f.text_field :username %>

			<%=f.label :email %>
			<%=f.email_field :email  %>
			<%=f.label :password %>
			<%=f.password_field :password  %>
			<%=f.label :password_confirmation %>
			<%=f.password_field :password_confirmation  %>			

			<%=f.submit(@admin.new_record? ? "Create admin" : "Update admin info", class: "btn btn-success") %>
		<% end %>
	</div>


</div>


